<?xml version="1.0" encoding="utf-8"?>
<manifest 
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.novorobo.tracker.app"
	android:versionCode="26"
	android:versionName="0.99">

	<uses-sdk 
		android:minSdkVersion="16"
		android:targetSdkVersion="16" />

	<supports-screens 
		android:anyDensity="true" />

	<application 
		android:label="@string/app_name" 
		android:icon="@drawable/icon"
		android:theme="@style/Theme">

		<activity 
			android:name="MetricList"
			android:label="@string/app_name">
			
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name="About"
			android:label="@string/about"/>

		<activity
			android:name="MetricEdit"/>

		<activity
			android:name="GraphStyleEdit"
			android:label="@string/metric_settings_widget_appearance"/>

		<activity
			android:name="DatapointList"/>

		<activity
			android:name="PreviewGraph"
			android:theme="@style/Transparent"/>

		<activity
			android:name="HelpIndex"
			android:label="@string/help_index"/>

		<activity
			android:name="HelpMetricEdit"
			android:label="@string/help_metric_edit"/>

		<activity
			android:name="HelpWidgetCreation"
			android:label="@string/help_widget_creation"/>



		<activity 
			android:name="ShowWidgetDialog"
			android:theme="@style/FakeDialog"

			android:excludeFromRecents="true"
			android:launchMode="singleInstance"
			android:taskAffinity="com.novorobo.tracker.app.ShowWidgetDialog"/>

		<activity 
			android:name="SetWidgetMetric"
			android:theme="@style/FakeDialog"
			android:excludeFromRecents="true">
			
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
		    </intent-filter>
		</activity>





	</application>
</manifest>
